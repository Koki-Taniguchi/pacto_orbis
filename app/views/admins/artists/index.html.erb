<div class="container">
  <h1 class="m-5">アーティスト一覧</h1>
  <div class="row">
    <div class="col-lg-3">
      <%= form_with(model: [:admins, @artist], local: true) do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <table class="table">
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td><%= link_to "編集", edit_admins_artist_path(artist) %></td>
            <td><%= link_to "削除", admins_artist_path(artist), method: :delete %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @artists %>
    </div>
  </div>
</div>