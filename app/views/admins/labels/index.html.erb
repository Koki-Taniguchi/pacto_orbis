<div class="container">
  <h1 class="m-5">レーベル一覧</h1>
  <div class="row">
    <div class="col-lg-3">
      <%= form_with(model: [:admins, @label], local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <table class="table">
        <% @labels.each do |label| %>
          <tr>
            <td><%= label.name %></td>
            <td><%= link_to "編集", edit_admins_label_path(label) %></td>
            <td><%= link_to "削除", admins_label_path(label), method: :delete %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @labels %>
    </div>
  </div>
</div>