<div class="container">
  <h1 class="m-5">ジャンル一覧</h1>
  <div class="row">
    <div class="col-lg-3">
      <%= form_with(model: [:admins, @genre], local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <table class="table">
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admins_genre_path(genre) %></td>
            <td><%= link_to "削除", admins_genre_path(genre), method: :delete %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @genres %>
    </div>
  </div>
</div>