<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light row">
      <h3>PacOr</h3>
      <% if admin_signed_in? %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'ユーザー', admins_users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'アーティスト', admins_artists_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'ジャンル', admins_genres_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'レーベル', admins_labels_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to '受注履歴', admins_orders_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to '商品', admins_items_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      <% else %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'ログイン', admin_session_path, class: "nav-link" %>
          </li>
        </ul>
      <% end %>
      <%= form_with url: admins_items_path, method: 'get', local: true, class: 'form-inline my-2 my-lg-0' do |f| %>
        <%= f.search_field :search, class: 'form-control mr-sm-2' %>
        <%= f.submit "商品検索", class: 'btn btn-outline-success my-2 my-sm-0' %>
      <% end %>
      </div>
    </nav>
  </div>
</header>
