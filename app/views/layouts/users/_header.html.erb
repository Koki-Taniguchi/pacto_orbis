<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light row">
      <p class="navbar-brand">PacOr</p>
      <% if user_signed_in? %>
        <p>ようこそ<%= current_user.first_name %><%= current_user.last_name %>様</p>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Top', root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'My page', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Cart', cart_items_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      <% else %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Top', root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'My page', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Cart', cart_items_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log in', new_user_session_path, class: "nav-link" %>
          </li>
        </ul>
      <% end %>

      <%= form_with url: items_path, method: 'get', local: true, class: 'form-inline my-2 my-lg-0' do |f| %>
        <%= f.search_field :search, class: 'form-control mr-sm-2' %>
        <%= f.submit "商品検索", class: 'btn btn-outline-success my-2 my-sm-0' %>
      <% end %>
      </div>
    </nav>
  </div>
</header>
